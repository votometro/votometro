---
import Layout from "../layouts/Layout.astro"
import ConnectionAnimation from "../components/ConnectionAnimation.astro"
import { cn, card } from "../lib/styles";
---

<Layout>
	<!-- Navigation Menu -->
	<nav class="fixed top-0 left-0 right-0 bg-white shadow-md z-50">
		<div class="max-w-7xl mx-auto px-4 md:px-6">
			<div class="flex items-center justify-between h-16">
				<a href="/" class="text-xl font-bold text-black">Votomatic</a>
				<div class="hidden md:flex items-center space-x-8">
					<a
						href="/como-funciona"
						class="text-gray-700 hover:text-black transition-colors"
						>Cómo funciona</a
					>
					<a
						href="/preguntas-frecuentes"
						class="text-gray-700 hover:text-black transition-colors"
						>Preguntas frecuentes</a
					>
					<a
						href="/documentacion"
						class="text-gray-700 hover:text-black transition-colors"
						>Documentación</a
					>
				</div>
				<button
					id="mobile-menu-button"
					class="md:hidden p-2 text-gray-700"
				>
					<svg
						class="w-6 h-6"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
			<div id="mobile-menu" class="hidden md:hidden pb-4">
				<a
					href="/como-funciona"
					class="block py-2 text-gray-700 hover:text-black transition-colors"
					>Cómo funciona</a
				>
				<a
					href="/preguntas-frecuentes"
					class="block py-2 text-gray-700 hover:text-black transition-colors"
					>Preguntas frecuentes</a
				>
				<a
					href="/documentacion"
					class="block py-2 text-gray-700 hover:text-black transition-colors"
					>Documentación</a
				>
			</div>
		</div>
	</nav>

	<!-- Call to Action Section -->
	<section
		class="sticky-section cta-section h-[100dvh] flex items-center overflow-hidden pt-16"
	>
		<div class="max-w-7xl mx-auto px-4 md:px-6 py-16 w-full">
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<!-- Animation - Desktop: Left, Mobile: Bottom -->
				<div
					class="w-full h-[300px] md:h-[500px] order-1 md:order-1 overflow-hidden"
				>
					<ConnectionAnimation />
				</div>

				<!-- CTA Content - Desktop: Right, Mobile: Top -->
				<div
					class={cn(card({ size: "lg" }), "text-center md:text-left rounded-xl bg-primary order-2 md:order-2 shadow-none")}
				>
					<h2
						class="text-5xl md:text-6xl font-bold text-black mb-6 leading-tight"
					>
						Conoce tu orientación política
					</h2>
					<p class="text-xl md:text-2xl text-gray-700 mb-8">
						Descubre qué partidos políticos están más alineados con
						tus opiniones
					</p>
					<a
						href="/elecciones-generales-2026"
						class="inline-block bg-black text-white font-bold text-lg px-12 py-5 rounded-xl hover:bg-black-hover transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
					>
						Empezar Votomatic
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>

<script>
	const button = document.getElementById("mobile-menu-button")
	const menu = document.getElementById("mobile-menu")
	button?.addEventListener("click", () => {
		menu?.classList.toggle("hidden")
	})
</script>
